@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel

    <h1>Online Bookstore</h1>
   
    
    @foreach (Book b in Model.Books)
    {
       <div class="card m-1 p-1">
        <h4>@b.Title
        <span class="badge rounded-pill bg-primary text-white float-end"><small>@b.Category</small></span>
        </h4>
         <ul>
            <li>Author: @b.Title</li>
            <li>Publisher: @b.Publisher</li>
            <li>ISBN: @b.Isbn</li>
            <li>Classification: @b.Classification</li>
            <li>Category: @b.Category</li>
            <li>Page Count: @b.PageCount</li>
            <li>Price: @b.Price</li>
         </ul>
        </div>
    }

    <div page-model="@Model.PaginationInfo" page-action="Index" page-class-enabled="true" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>